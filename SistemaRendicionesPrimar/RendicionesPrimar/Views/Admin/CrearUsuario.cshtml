@model RendicionesPrimar.Models.ViewModels.CrearUsuarioViewModel

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="crear-usuario-container">
    <!-- Header compacto -->
    <div class="page-header">
        <div class="header-content">
            <div class="header-left">
                <h1 class="page-title">
                    <i class="fas fa-user-plus"></i>
                    Crear Nuevo Usuario
                </h1>
                <p class="page-subtitle">Complete la información para crear un nuevo usuario</p>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i>
                    Volver
                </a>
            </div>
        </div>
    </div>

    <!-- Formulario compacto -->
    <div class="form-container">
        <form asp-action="CrearUsuario" method="post" class="user-form">
            
            <!-- Información Personal -->
            <div class="form-section">
                <div class="section-header">
                    <h3 class="section-title">
                        <i class="fas fa-user"></i>
                        Información Personal
                    </h3>
                </div>
                
                <div class="section-content">
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Nombre" class="form-label">
                                <i class="fas fa-user"></i>
                                Nombre
                            </label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                            <span asp-validation-for="Nombre" class="form-error"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="NombreCompleto" class="form-label">
                                <i class="fas fa-id-card"></i>
                                Nombre Completo
                            </label>
                            <input asp-for="NombreCompleto" class="form-control" placeholder="Nombre y apellidos completos" />
                            <span asp-validation-for="NombreCompleto" class="form-error"></span>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Rut" class="form-label">
                                <i class="fas fa-id-badge"></i>
                                RUT
                            </label>
                            <input asp-for="Rut" class="form-control" placeholder="12.345.678-9" />
                            <span asp-validation-for="Rut" class="form-error"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Telefono" class="form-label">
                                <i class="fas fa-phone"></i>
                                Teléfono
                            </label>
                            <input asp-for="Telefono" class="form-control" placeholder="+56 9 1234 5678" />
                            <span asp-validation-for="Telefono" class="form-error"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información de Acceso -->
            <div class="form-section">
                <div class="section-header">
                    <h3 class="section-title">
                        <i class="fas fa-key"></i>
                        Información de Acceso
                    </h3>
                </div>
                
                <div class="section-content">
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i>
                                Email Corporativo
                            </label>
                            <input asp-for="Email" type="email" class="form-control" placeholder="usuario@primar.cl" />
                            <span asp-validation-for="Email" class="form-error"></span>
                        </div>
                        
                        <div class="form-group">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-lock"></i>
                                Contraseña
                            </label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Mínimo 6 caracteres" />
                            <div class="form-help">
                                <i class="fas fa-info-circle"></i>
                                El usuario deberá cambiar esta contraseña en su primer ingreso
                            </div>
                            <span asp-validation-for="Password" class="form-error"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Información Laboral -->
            <div class="form-section">
                <div class="section-header">
                    <h3 class="section-title">
                        <i class="fas fa-briefcase"></i>
                        Información Laboral
                    </h3>
                </div>
                
                <div class="section-content">
                    <div class="form-row">
                        <div class="form-group">
                            <label asp-for="Cargo" class="form-label">
                                <i class="fas fa-user-tie"></i>
                                Cargo
                            </label>
                            <input asp-for="Cargo" class="form-control" placeholder="Ej: Analista de Finanzas" />
                            <span asp-validation-for="Cargo" class="form-error"></span>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group form-group-full">
                            <label asp-for="Departamento" class="form-label">
                                <i class="fas fa-building"></i>
                                Departamento
                            </label>
                            <input asp-for="Departamento" class="form-control" placeholder="Ej: Finanzas, Recursos Humanos, Ventas" />
                            <span asp-validation-for="Departamento" class="form-error"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="form-actions">
                <div class="actions-content">
                    <a href="@Url.Action("Index", "Admin")" class="btn btn-secondary">
                        <i class="fas fa-times"></i>
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        Crear Usuario
                    </button>
                </div>
                <div class="action-help">
                    <i class="fas fa-lightbulb"></i>
                    El usuario recibirá un email con sus credenciales de acceso
                </div>
            </div>
        </form>
    </div>
</div>

<style>
/* Variables corporativas */
:root {
    --primar-primary: rgb(19, 100, 137);
    --primar-primary-dark: rgb(19, 100, 137);
    --primar-primary-light: rgb(19, 100, 137);
    --primar-secondary: #f1f5f9;
    --primar-success: #10b981;
    --primar-warning: #f59e0b;
    --primar-danger: #ef4444;
    --primar-info: #06b6d4;
    --primar-text: #1e293b;
    --primar-text-light: #64748b;
    --primar-background: #f8fafc;
    --primar-white: #ffffff;
    --primar-border: #e2e8f0;
    --primar-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    --primar-shadow-hover: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --primar-radius: 12px;
    --primar-radius-sm: 8px;
    --primar-transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    --primar-gradient: linear-gradient(135deg, var(--primar-primary) 0%, var(--primar-primary-light) 100%);
}

/* Contenedor principal */
.crear-usuario-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0;
}

/* Header compacto */
.page-header {
    background: var(--primar-white);
    border-radius: var(--primar-radius);
    box-shadow: var(--primar-shadow);
    margin-bottom: 24px;
    overflow: hidden;
}

.header-content {
    background: var(--primar-gradient);
    color: white;
    padding: 24px 32px;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.page-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    display: flex;
    align-items: center;
    gap: 12px;
}

.page-title i {
    font-size: 1.5rem;
}

.page-subtitle {
    margin: 4px 0 0 0;
    opacity: 0.9;
    font-size: 0.9rem;
    font-weight: 400;
}

.header-actions .btn {
    background: rgba(255, 255, 255, 0.15);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: white;
    padding: 8px 16px;
    font-size: 0.9rem;
}

.header-actions .btn:hover {
    background: rgba(255, 255, 255, 0.25);
    color: white;
    text-decoration: none;
}

/* Contenedor del formulario */
.form-container {
    background: var(--primar-white);
    border-radius: var(--primar-radius);
    box-shadow: var(--primar-shadow);
    overflow: hidden;
}

/* Secciones del formulario */
.form-section {
    border-bottom: 1px solid var(--primar-border);
}

.form-section:last-of-type {
    border-bottom: none;
}

.section-header {
    padding: 20px 32px 16px 32px;
    background: var(--primar-secondary);
    border-bottom: 1px solid var(--primar-border);
}

.section-title {
    margin: 0;
    font-size: 1.1rem;
    font-weight: 700;
    color: var(--primar-text);
    display: flex;
    align-items: center;
    gap: 10px;
}

.section-title i {
    color: var(--primar-primary);
    font-size: 1rem;
}

.section-content {
    padding: 24px 32px;
}

/* Filas del formulario */
.form-row {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20px;
    margin-bottom: 16px;
}

.form-row:last-child {
    margin-bottom: 0;
}

/* Campos del formulario */
.form-group {
    display: flex;
    flex-direction: column;
}

.form-group-full {
    grid-column: 1 / -1;
}

.form-label {
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: 600;
    color: var(--primar-text);
    margin-bottom: 6px;
    font-size: 0.9rem;
}

.form-label i {
    color: var(--primar-primary);
    font-size: 0.9rem;
}

.form-control {
    width: 100%;
    padding: 12px 16px;
    border: 2px solid var(--primar-border);
    border-radius: var(--primar-radius-sm);
    font-size: 0.95rem;
    transition: var(--primar-transition);
    background: var(--primar-white);
    font-family: inherit;
}

.form-control:focus {
    outline: none;
    border-color: var(--primar-primary);
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
}

.form-control::placeholder {
    color: var(--primar-text-light);
    opacity: 0.7;
}

.form-help {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-top: 4px;
    font-size: 0.8rem;
    color: var(--primar-text-light);
}

.form-help i {
    color: var(--primar-info);
}

.form-error {
    display: block;
    margin-top: 4px;
    font-size: 0.8rem;
    color: var(--primar-danger);
    font-weight: 500;
}

/* Botones de acción */
.form-actions {
    background: var(--primar-secondary);
    padding: 24px 32px;
    border-top: 1px solid var(--primar-border);
}

.actions-content {
    display: flex;
    gap: 16px;
    justify-content: flex-end;
    margin-bottom: 16px;
}

.action-help {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    font-size: 0.85rem;
    color: var(--primar-text-light);
    padding: 10px 16px;
    background: rgba(6, 182, 212, 0.1);
    border-radius: var(--primar-radius-sm);
    border: 1px solid rgba(6, 182, 212, 0.2);
}

.action-help i {
    color: var(--primar-info);
}

/* Botones */
.btn {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    border-radius: var(--primar-radius-sm);
    font-weight: 600;
    font-size: 0.9rem;
    text-decoration: none;
    border: none;
    cursor: pointer;
    transition: var(--primar-transition);
    font-family: inherit;
}

.btn-primary {
    background: var(--primar-gradient);
    color: white;
    box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(37, 99, 235, 0.4);
    color: white;
    text-decoration: none;
}

.btn-secondary {
    background: var(--primar-white);
    color: var(--primar-text);
    border: 2px solid var(--primar-border);
}

.btn-secondary:hover {
    background: var(--primar-secondary);
    border-color: var(--primar-primary);
    color: var(--primar-text);
    text-decoration: none;
}

/* Responsive */
@@media (max-width: 768px) {
    .crear-usuario-container {
        padding: 0 16px;
    }

    .header-content {
        flex-direction: column;
        gap: 16px;
        text-align: center;
        padding: 20px 24px;
    }

    .page-title {
        font-size: 1.25rem;
    }

    .section-header {
        padding: 16px 20px;
    }

    .section-content {
        padding: 20px;
    }

    .form-row {
        grid-template-columns: 1fr;
        gap: 16px;
    }

    .form-actions {
        padding: 20px;
    }

    .actions-content {
        flex-direction: column;
        gap: 12px;
    }

    .btn {
        justify-content: center;
        width: 100%;
    }
}

@@media (max-width: 480px) {
    .page-title {
        font-size: 1.1rem;
        flex-direction: column;
        gap: 8px;
    }

    .section-header {
        padding: 12px 16px;
    }

    .section-content {
        padding: 16px;
    }

    .form-actions {
        padding: 16px;
    }
}
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}