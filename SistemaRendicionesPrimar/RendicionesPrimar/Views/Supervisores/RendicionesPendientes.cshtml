@model IEnumerable<RendicionesPrimar.Models.Rendicion>
@{
    ViewData["Title"] = "Rendiciones Pendientes";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-clock text-warning"></i>
                        Rendiciones Pendientes de Aprobación
                    </h3>
                </div>
                <div class="card-body">
                    @if (!Model.Any())
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            No hay rendiciones pendientes de aprobación en este momento.
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>Ticket</th>
                                        <th>Empleado</th>
                                        <th>Título</th>
                                        <th>Monto</th>
                                        <th>Fecha</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var rendicion in Model)
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge badge-primary">@rendicion.NumeroTicket</span>
                                            </td>
                                            <td>
                                                <i class="fas fa-user text-info"></i>
                                                @rendicion.Usuario?.Nombre
                                            </td>
                                            <td>
                                                <strong>@rendicion.Titulo</strong>
                                                @if (!string.IsNullOrEmpty(rendicion.Descripcion))
                                                {
                                                    <br />
                                                    <small class="text-muted">@rendicion.Descripcion.Substring(0, Math.Min(50, rendicion.Descripcion.Length))...</small>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge badge-success">
                                                    $@rendicion.MontoTotal.ToString("N0")
                                                </span>
                                            </td>
                                            <td>
                                                <i class="fas fa-calendar text-secondary"></i>
                                                @rendicion.FechaCreacion.ToString("dd/MM/yyyy")
                                            </td>
                                            <td>
                                                @if (rendicion.Estado == "pendiente")
                                                {
                                                    <span class="badge badge-warning">
                                                        <i class="fas fa-clock"></i> Pendiente
                                                    </span>
                                                }
                                                else if (rendicion.Estado == "aprobado_2")
                                                {
                                                    <span class="badge badge-info">
                                                        <i class="fas fa-check"></i> Aprobada Nivel 1
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a href="@Url.Action("Detalle", "Rendiciones", new { id = rendicion.Id })" 
                                                       class="btn btn-sm btn-info" title="Ver Detalle">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (rendicion.Estado == "pendiente")
                                                    {
                                                        <button type="button" class="btn btn-sm btn-success" 
                                                                onclick="aprobarRendicion(@rendicion.Id)" title="Aprobar">
                                                            <i class="fas fa-check"></i>
                                                        </button>
                                                        <button type="button" class="btn btn-sm btn-danger" 
                                                                onclick="rechazarRendicion(@rendicion.Id)" title="Rechazar">
                                                            <i class="fas fa-times"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function aprobarRendicion(id) {
            if (confirm('¿Está seguro de que desea aprobar esta rendición?')) {
                $.post('@Url.Action("Aprobar1", "Rendiciones")', { id: id })
                    .done(function (result) {
                        if (result.success) {
                            toastr.success('Rendición aprobada exitosamente');
                            setTimeout(function () {
                                location.reload();
                            }, 1500);
                        } else {
                            toastr.error('Error al aprobar la rendición');
                        }
                    })
                    .fail(function () {
                        toastr.error('Error al procesar la solicitud');
                    });
            }
        }

        function rechazarRendicion(id) {
            var motivo = prompt('Ingrese el motivo del rechazo:');
            if (motivo) {
                $.post('@Url.Action("Rechazar1", "Rendiciones")', { 
                    id: id, 
                    comentarios: motivo 
                })
                .done(function (result) {
                    if (result.success) {
                        toastr.success('Rendición rechazada exitosamente');
                        setTimeout(function () {
                            location.reload();
                        }, 1500);
                    } else {
                        toastr.error('Error al rechazar la rendición');
                    }
                })
                .fail(function () {
                    toastr.error('Error al procesar la solicitud');
                });
            }
        }
    </script>
} 