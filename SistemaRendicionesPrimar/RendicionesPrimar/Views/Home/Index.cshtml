@model RendicionesPrimar.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Portal";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Portal- Sistema de Rendiciones | Primar S.A.</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>

<div class="app-container">
    <!-- Header simple -->
    <header class="header">
        <div class="header-content">
            <div class="brand">
                <i class="fas fa-building"></i>
                <div class="brand-text">
                    <h1>Primar S.A.</h1>
                    <span>Sistema de Rendiciones</span>
                </div>
            </div>
            
            <nav class="nav">
                <a href="#" class="nav-link active">
                    <i class="fas fa-home"></i>
                    Inicio
                </a>
                <a href="@Url.Action("Index", "Rendiciones")" class="nav-link">
                    <i class="fas fa-file-invoice-dollar"></i>
                    Rendiciones
                </a>
                @{
                    var userRole = Context.User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value ?? "empleado";
                    var userEmail = Context.User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value ?? "";
                    var isCamila = userRole == "aprobador1" && userEmail == "camila.flores@primar.cl";
                }
                @if (isCamila)
                {
                    <a href="@Url.Action("Index", "Admin")" class="nav-link">
                        <i class="fas fa-users-cog"></i>
                        Usuarios
                    </a>
                }
                <a href="@Url.Action("Notificaciones", "Home")" class="nav-link">
                    <i class="fas fa-bell"></i>
                    Notificaciones
                    @if (ViewBag.NotificacionesNoLeidas != null && ViewBag.NotificacionesNoLeidas > 0)
                    {
                        <span class="badge">@ViewBag.NotificacionesNoLeidas</span>
                    }
                </a>
                <a href="#" class="nav-link">
                    <i class="fas fa-question-circle"></i>
                    Ayuda
                </a>
            </nav>
            
            <div class="user-section">
                <div class="user-info">
                    <span class="user-name">@(ViewBag.UserName ?? "Usuario")</span>
                    @if (ViewBag.UserRole != null)
                    {
                        @if (ViewBag.UserRole == "empleado")
                        {
                            <span class="user-role role-empleado">Empleado</span>
                        }
                        else if (ViewBag.UserRole == "aprobador1")
                        {
                            <span class="user-role role-supervisor">Supervisor</span>
                        }
                        else if (ViewBag.UserRole == "aprobador2")
                        {
                            <span class="user-role role-gerente">Gerente</span>
                        }
                        else
                        {
                            <span class="user-role role-admin">Administrador</span>
                        }
                    }
                </div>
                <button class="btn-logout" onclick="window.location.href='@Url.Action("Logout", "Account")'">
                    <i class="fas fa-sign-out-alt"></i>
                    Cerrar Sesión
                </button>
            </div>
        </div>
    </header>

    <!-- Contenido principal -->
    <main class="main">
        <div class="container">
            
            <!-- Header de página -->
            <div class="page-header">
                <div>
                    <h1>Inicio</h1>
                    <p>Resumen general del sistema de rendiciones</p>
                </div>
                <div class="date">
                    @DateTime.Now.ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("es-ES"))
                </div>
            </div>

            <!-- Métricas -->
            <section class="section">
                <h2>Indicadores</h2>
                <div class="metrics">
                    <div class="metric">
                        <div class="metric-header">
                            <i class="fas fa-file-invoice-dollar"></i>
                            <div>
                                <h3>
                                    @if (ViewBag.UserRole == "empleado")
                                    {
                                        <span>Mis Rendiciones</span>
                                    }
                                    else
                                    {
                                        <span>Total Rendiciones</span>
                                    }
                                </h3>
                                <span>Este mes</span>
                            </div>
                        </div>
                        <div class="metric-value">@(Model?.TotalRendiciones ?? 0)</div>
                    </div>

                    <div class="metric">
                        <div class="metric-header">
                            <i class="fas fa-clock"></i>
                            <div>
                                <h3>Pendientes</h3>
                                <span>Por revisar</span>
                            </div>
                        </div>
                        <div class="metric-value">@(Model?.RendicionesPendientes ?? 0)</div>
                    </div>

                    @if (ViewBag.UserRole == "empleado" || ViewBag.UserRole == "admin")
                    {
                        <div class="metric">
                            <div class="metric-header">
                                <i class="fas fa-check-circle"></i>
                                <div>
                                    <h3>Aprobadas</h3>
                                    <span>Este mes</span>
                                </div>
                            </div>
                            <div class="metric-value">@(Model?.RendicionesAprobadas ?? 0)</div>
                        </div>
                    }
                </div>
            </section>

            <!-- Acciones rápidas -->
            <section class="section">
                <h2>Acciones Rápidas</h2>
                <div class="actions">
                    @if (ViewBag.UserRole == "empleado")
                    {
                        <a href="@Url.Action("Crear", "Rendiciones")" class="action-card primary">
                            <i class="fas fa-plus"></i>
                            <div>
                                <h3>Nueva Rendición</h3>
                                <p>Crear una nueva solicitud de gastos</p>
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    }

                    @if (isCamila)
                    {
                        <a href="@Url.Action("Index", "Admin")" class="action-card">
                            <i class="fas fa-users-cog"></i>
                            <div>
                                <h3>Gestión de Usuarios</h3>
                                <p>Administrar usuarios del sistema</p>
                            </div>
                            <i class="fas fa-chevron-right"></i>
                        </a>
                    }

                    <a href="@Url.Action("Index", "Rendiciones")" class="action-card">
                        <i class="fas fa-file-invoice-dollar"></i>
                        <div>
                            <h3>
                                @if (ViewBag.UserRole == "empleado")
                                {
                                    <span>Mis Rendiciones</span>
                                }
                                else
                                {
                                    <span>Gestionar Rendiciones</span>
                                }
                            </h3>
                            <p>
                                @if (ViewBag.UserRole == "empleado")
                                {
                                    <span>Ver estado de mis solicitudes</span>
                                }
                                else
                                {
                                    <span>Revisar y aprobar solicitudes</span>
                                }
                            </p>
                        </div>
                        <i class="fas fa-chevron-right"></i>
                    </a>

                    <a href="#" class="action-card">
                        <i class="fas fa-chart-line"></i>
                        <div>
                            <h3>Reportes</h3>
                            <p>Generar reportes y análisis</p>
                        </div>
                        <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
            </section>

            <!-- Proceso -->
            <section class="section">
                <h2>Proceso de Rendiciones</h2>
                <div class="process">
                    @if (ViewBag.UserRole == "empleado")
                    {
                        <div class="step">
                            <div class="step-number">1</div>
                            <div class="step-content">
                                <h4>Registro de Gastos</h4>
                                <p>Complete el formulario con detalles de gastos y adjunte comprobantes</p>
                            </div>
                        </div>
                        <div class="step">
                            <div class="step-number">2</div>
                            <div class="step-content">
                                <h4>Revisión Supervisión</h4>
                                <p>Su supervisor revisa y valida la información proporcionada</p>
                            </div>
                        </div>
                        <div class="step">
                            <div class="step-number">3</div>
                            <div class="step-content">
                                <h4>Aprobación Final</h4>
                                <p>Gerencia revisa y autoriza el pago de la rendición</p>
                            </div>
                        </div>
                    }
                    else if (ViewBag.UserRole == "aprobador1")
                    {
                        <div class="step">
                            <div class="step-number">1</div>
                            <div class="step-content">
                                <h4>Revisión Inicial</h4>
                                <p>Examine solicitudes pendientes de su equipo</p>
                            </div>
                        </div>
                        <div class="step">
                            <div class="step-number">2</div>
                            <div class="step-content">
                                <h4>Validación</h4>
                                <p>Verifique cumplimiento de políticas y documentación</p>
                            </div>
                        </div>
                        <div class="step">
                            <div class="step-number">3</div>
                            <div class="step-content">
                                <h4>Decisión</h4>
                                <p>Apruebe o rechace con observaciones detalladas</p>
                            </div>
                        </div>
                    }
                    else if (ViewBag.UserRole == "aprobador2")
                    {
                        <div class="step">
                            <div class="step-number">1</div>
                            <div class="step-content">
                                <h4>Revisión Ejecutiva</h4>
                                <p>Validación final de rendiciones pre-aprobadas</p>
                            </div>
                        </div>
                        <div class="step">
                            <div class="step-number">2</div>
                            <div class="step-content">
                                <h4>Autorización</h4>
                                <p>Aprobación definitiva y autorización de pagos</p>
                            </div>
                        </div>
                        <div class="step">
                            <div class="step-number">3</div>
                            <div class="step-content">
                                <h4>Procesamiento</h4>
                                <p>Envío a contabilidad para procesamiento de pago</p>
                            </div>
                        </div>
                    }
                </div>
            </section>

            <!-- Actividad reciente -->
            @if (Model?.UltimasRendiciones != null && Model.UltimasRendiciones.Any())
            {
                <section class="section">
                    <h2>Actividad Reciente</h2>
                    <div class="activity">
                        @foreach (var actividad in Model.UltimasRendiciones)
                        {
                            <div class="activity-item">
                                <i class="fas fa-circle"></i>
                                <div>
                                    <p>@actividad</p>
                                    <span>Hace 2 horas</span>
                                </div>
                            </div>
                        }
                    </div>
                </section>
            }

        </div>
    </main>
</div>

<style>
/* Variables corporativas */
:root {
    --primar-primary: rgb(31, 90, 136);
    --primar-primary-dark: rgb(31, 90, 136);
    --primar-primary-light: rgb(31, 90, 136);
    --primar-secondary: #f1f5f9;
    --primar-success: #10b981;
    --primar-warning: #f59e0b;
    --primar-danger: #ef4444;
    --primar-info: #06b6d4;
    --primar-text: #1e293b;
    --primar-text-light: #64748b;
    --primar-background: #f8fafc;
    --primar-white: #ffffff;
    --primar-border: #e2e8f0;
    --primar-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
    --primar-shadow-hover: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --primar-radius: 12px;
    --primar-radius-sm: 8px;
    --primar-transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    --primar-gradient: linear-gradient(135deg, var(--primar-primary) 0%, var(--primar-primary-light) 100%);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: var(--primar-background);
    color: var(--primar-text);
    line-height: 1.6;
    font-size: 15px;
    font-weight: 400;
}

.app-container {
    min-height: 100vh;
    display: flex;
    flex-direction: column;
}

/* Header */
.header {
    background: var(--primar-gradient);
    box-shadow: var(--primar-shadow);
    position: sticky;
    top: 0;
    z-index: 1000;
}

.header-content {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 70px;
}

.brand {
    display: flex;
    align-items: center;
    color: white;
    gap: 12px;
}

.brand i {
    font-size: 1.5rem;
}

.brand-text h1 {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.2;
}

.brand-text span {
    font-size: 0.75rem;
    opacity: 0.9;
    font-weight: 400;
}

.nav {
    display: flex;
    align-items: center;
    gap: 8px;
}

.nav-link {
    color: rgba(255,255,255,0.95);
    text-decoration: none;
    padding: 10px 16px;
    border-radius: var(--primar-radius-sm);
    font-weight: 500;
    font-size: 0.9rem;
    transition: var(--primar-transition);
    display: flex;
    align-items: center;
    gap: 8px;
    position: relative;
}

.nav-link:hover {
    color: white;
    background-color: rgba(255,255,255,0.15);
    text-decoration: none;
}

.nav-link.active {
    background-color: rgba(255,255,255,0.2);
    color: white;
}

.badge {
    position: absolute;
    top: -4px;
    right: -4px;
    background: var(--primar-danger);
    color: white;
    font-size: 0.7rem;
    font-weight: 600;
    padding: 2px 6px;
    border-radius: 10px;
    min-width: 18px;
    text-align: center;
}

.user-section {
    display: flex;
    align-items: center;
    gap: 16px;
    padding-left: 24px;
    border-left: 1px solid rgba(255,255,255,0.2);
}

.user-info {
    color: white;
    text-align: right;
}

.user-name {
    display: block;
    font-weight: 500;
    font-size: 0.9rem;
}

.user-role {
    display: inline-block;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding: 2px 8px;
    border-radius: 12px;
    margin-top: 2px;
}

.role-empleado { background: rgba(6, 182, 212, 0.3); }
.role-supervisor { background: rgba(245, 158, 11, 0.3); }
.role-gerente { background: rgba(16, 185, 129, 0.3); }
.role-admin { background: rgba(239, 68, 68, 0.3); }

.btn-logout {
    background: rgba(255,255,255,0.15);
    border: 1px solid rgba(255,255,255,0.2);
    color: white;
    padding: 8px 16px;
    border-radius: var(--primar-radius-sm);
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    transition: var(--primar-transition);
    display: flex;
    align-items: center;
    gap: 8px;
}

.btn-logout:hover {
    background: rgba(255,255,255,0.25);
}

/* Main content */
.main {
    flex: 1;
    padding: 40px 0;
}

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 24px;
}

/* Page header */
.page-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 32px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--primar-border);
}

.page-header h1 {
    font-size: 2rem;
    font-weight: 700;
    color: var(--primar-text);
    margin-bottom: 4px;
}

.page-header p {
    color: var(--primar-text-light);
    font-size: 1rem;
    margin: 0;
}

.date {
    font-size: 0.875rem;
    color: var(--primar-text-light);
    font-weight: 500;
}

/* Sections */
.section {
    margin-bottom: 48px;
}

.section h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--primar-text);
    margin-bottom: 24px;
}

/* Metrics */
.metrics {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 24px;
}

.metric {
    background: var(--primar-white);
    border: 1px solid var(--primar-border);
    border-radius: var(--primar-radius);
    padding: 24px;
    transition: var(--primar-transition);
}

.metric:hover {
    box-shadow: var(--primar-shadow-hover);
    transform: translateY(-2px);
}

.metric-header {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 16px;
}

.metric-header i {
    width: 48px;
    height: 48px;
    border-radius: var(--primar-radius);
    background: var(--primar-gradient);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
}

.metric-header h3 {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--primar-text);
    margin: 0;
}

.metric-header span {
    font-size: 0.75rem;
    color: var(--primar-text-light);
}

.metric-value {
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--primar-text);
}

/* Actions */
.actions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 16px;
}

.action-card {
    background: var(--primar-white);
    border: 1px solid var(--primar-border);
    border-radius: var(--primar-radius);
    padding: 24px;
    text-decoration: none;
    color: inherit;
    display: flex;
    align-items: center;
    gap: 16px;
    transition: var(--primar-transition);
}

.action-card:hover {
    box-shadow: var(--primar-shadow-hover);
    transform: translateY(-2px);
    text-decoration: none;
    color: inherit;
    border-color: var(--primar-primary);
}

.action-card.primary {
    background: var(--primar-gradient);
    color: white;
    border-color: var(--primar-primary);
}

.action-card.primary:hover {
    color: white;
}

.action-card i:first-child {
    width: 48px;
    height: 48px;
    border-radius: var(--primar-radius);
    background: var(--primar-secondary);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primar-primary);
    font-size: 1.2rem;
}

.action-card.primary i:first-child {
    background: rgba(255, 255, 255, 0.2);
    color: white;
}

.action-card div {
    flex: 1;
}

.action-card h3 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 4px;
}

.action-card p {
    font-size: 0.875rem;
    opacity: 0.8;
    margin: 0;
}

.action-card i:last-child {
    color: var(--primar-text-light);
    transition: var(--primar-transition);
}

.action-card:hover i:last-child {
    color: var(--primar-primary);
    transform: translateX(4px);
}

.action-card.primary:hover i:last-child {
    color: white;
}

/* Process */
.process {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 24px;
}

.step {
    background: var(--primar-white);
    border: 1px solid var(--primar-border);
    border-radius: var(--primar-radius);
    padding: 24px;
    display: flex;
    gap: 16px;
    transition: var(--primar-transition);
}

.step:hover {
    box-shadow: var(--primar-shadow-hover);
    transform: translateY(-2px);
}

.step-number {
    width: 32px;
    height: 32px;
    background: var(--primar-gradient);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 0.875rem;
    flex-shrink: 0;
}

.step-content h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--primar-text);
    margin-bottom: 8px;
}

.step-content p {
    font-size: 0.875rem;
    color: var(--primar-text-light);
    line-height: 1.5;
    margin: 0;
}

/* Activity */
.activity {
    background: var(--primar-white);
    border: 1px solid var(--primar-border);
    border-radius: var(--primar-radius);
    overflow: hidden;
}

.activity-item {
    padding: 16px 24px;
    border-bottom: 1px solid var(--primar-border);
    display: flex;
    align-items: flex-start;
    gap: 16px;
    transition: var(--primar-transition);
}

.activity-item:last-child {
    border-bottom: none;
}

.activity-item:hover {
    background: var(--primar-secondary);
}

.activity-item i {
    margin-top: 2px;
    color: var(--primar-primary);
    font-size: 0.75rem;
}

.activity-item p {
    font-size: 0.875rem;
    color: var(--primar-text);
    margin-bottom: 4px;
}

.activity-item span {
    font-size: 0.75rem;
    color: var(--primar-text-light);
}

/* Responsive */
@@media (max-width: 768px) {
    .header-content {
        flex-direction: column;
        height: auto;
        padding: 16px 24px;
        gap: 16px;
    }
    
    .nav {
        flex-wrap: wrap;
        justify-content: center;
    }
    
    .user-section {
        border-left: none;
        border-top: 1px solid rgba(255,255,255,0.2);
        padding-left: 0;
        padding-top: 16px;
    }
    
    .main {
        padding: 24px 0;
    }
    
    .container {
        padding: 0 16px;
    }
    
    .page-header {
        flex-direction: column;
        gap: 16px;
        align-items: flex-start;
    }
    
    .metrics,
    .actions,
    .process {
        grid-template-columns: 1fr;
    }
    
    .page-header h1 {
        font-size: 1.5rem;
    }
    
    .section {
        margin-bottom: 32px;
    }
}

@@media (max-width: 480px) {
    .container {
        padding: 0 12px;
    }
    
    .brand {
        flex-direction: column;
        gap: 4px;
        text-align: center;
    }
    
    .nav {
        flex-direction: column;
        gap: 8px;
    }
    
    .user-section {
        flex-direction: column;
        gap: 12px;
    }
    
    .action-card {
        flex-direction: column;
        text-align: center;
        gap: 16px;
    }
    
    .step {
        flex-direction: column;
        text-align: center;
        gap: 16px;
    }
}
</style>

</body>
</html>